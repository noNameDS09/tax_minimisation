import mongoose from 'mongoose';

const TaxSchema = new mongoose.Schema({
    userId: { 
        type: mongoose.Schema.Types.ObjectId, 
        ref: 'Profile', 
        required: true 
    },
    stockSymbol: { 
        type: String, 
        required: true 
    },
    quantity: { 
        type: Number, 
        required: true 
    },
    taxAmount: { 
        type: Number, 
        required: true 
    },
    transactionDate: { 
        type: Date, 
        required: true 
    }
}, {
    timestamps: true
});

export default mongoose.model('Tax', TaxSchema);
